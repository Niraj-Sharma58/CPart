@model List<ComputerPart.Models.ComputerPartModel>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h3 class="text-primary">Computer Parts List</h3>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="ComputerParts" asp-action="NewComPart" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Com_Part
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped mt-3">
        <thead class="table-dark">
            <tr>
                <th>Part Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.PartName</td>
                    <td>@obj.Category</td>
                    <td>@obj.Price</td>
                    <td>@obj.Quantity</td>
                    <td>
                        <a asp-action="Edit"
                           asp-route-id="@obj.Id"
                           class="btn btn-sm btn-warning">
                            Edit
                        </a>

                        <a asp-action="Delete"
                           asp-route-id="@obj.Id"
                           class="btn btn-sm btn-danger">
                            Delete
                        </a>
                    </td>
                        
                    
                </tr>
            }
        </tbody>
    </table>
</div>
