@model ComputerPart.Models.ComputerPartModel

<div class="container">
    <h3 class="text-danger">Delete Computer Part</h3>

    <form method="post">
        <input asp-for="Id" hidden />

        <div class="mb-3">
            <label>Part Name</label>
            <input asp-for="PartName" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label>Category</label>
            <input asp-for="Category" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label>Price</label>
            <input asp-for="Price" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label>Quantity</label>
            <input asp-for="Quantity" class="form-control" disabled />
        </div>

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
